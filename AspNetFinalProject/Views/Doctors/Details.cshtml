@model Doctor
 @{
     ViewBag.Title = "Details";
     List<Doctor>
     doctors = ViewBag.Doctors as List<Doctor>;


   }

        <!-- Page Title -->
        <div class="page-title">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-7">
                        <h2>Doctor</h2>
                    </div>

                    <div class="col-md-6 col-lg-5">
                        <ul>
                            <li><a href=@Url.Action("index","home")>Home</a></li>
                            <li>Doctor</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Title -->
        <!-- Doctors Details section -->
        <section class="doctors-details ptb-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-12">
                        <div class="doctors-details">
                            <div class="img">
                                <img src="~/Uploads/@Model.BigPhoto" alt="department-details">
                            </div>

                            <div class="doctors-desc">
                                <h3>@Model.FullName</h3>
                                <p>@Model.Moretext</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-12">
                        <div class="doctors-sidebar">
                            <div class="doctors-info">
                                <h4>Profile Details</h4>
                                <ul>
                                    <li>Address: <span>@Model.Address</span></li>
                                    <li>Phone: <span>@Model.Phone</span></li>
                                    <li>Email: <span><a href="#">@Model.Mail</a></span></li>
                                    <li>Speciality: <span>@Model.Speciality.Name</span></li>
                                    <li>Degree: <span>@Model.Degree</span></li>
                                    <li>Expert in: <span>@string.Join(",",Model.Speciality.ExpertIns)</span></li>
                                    <li>Categories: <span><a href="#">@Model.Speciality.DepartmentCategory.Name</a></span></li>
                                </ul>
                            </div>

                            <div class="doctors-social">
                                <ul>
                                    <li><a href="#"><i class="icofont-facebook"></i></a></li>
                                    <li><a href="#"><i class="icofont-twitter"></i></a></li>
                                    <li><a href="#"><i class="icofont-instagram"></i></a></li>
                                    <li><a href="#"><i class="icofont-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Doctors Details section -->
        <!-- Call To Action -->
        @{
            Html.RenderPartial("~/Views/_CallAction.cshtml");
        }

        <!-- End Call To Action -->
